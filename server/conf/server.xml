<!-- change Server.port and Connector.port to a unique value on a server -->
<Server port="18001" shutdown="SHUTDOWN">

  <Service name="Catalina">
  
    <Connector 
        port="8001" 
        protocol="AJP/1.3" />

    <Engine 
        name="Catalina" 
        defaultHost="localhost">

      <Host 
          name="localhost"  
          appBase="webapps"
          unpackWARs="true" 
          autoDeploy="true"
          xmlValidation="false" 
          xmlNamespaceAware="false" />
            
    </Engine>

  </Service>

</Server>
